<div class="row">
    <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Date picker</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <label>Select Client</label>
                    @Html.DropDownList("clientlist", new SelectList(Model, "Value", "Text"), new { @class = "form-control combobox" })
                </div>
                <div class="form-group">
                    <input type="hidden" class="form-control pull-right" id="start">
                    <input type="hidden" class="form-control pull-right" id="end">
                    <label>Date range:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control pull-right" id="reservation">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-info btn-flat" onclick="display()">View</button>
                        </span>  
                    </div>
                </div>
                <div class="form-group">
                    <label>Date range button:</label>
                    <div class="input-group">
                        <button type="button" class="btn btn-default pull-right" id="daterange-btn">
                            <i class="fa fa-calendar"></i> Date range picker
                            <i class="fa fa-caret-down"></i>
                        </button>
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="row">
                        <div class="col-xs-12" id="loading">
                            <i class="fa fa-refresh fa-spin big-icon"></i>
                        </div>
                    </div>
                </div>*@
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Client Status</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12">

                        <div class="info-box bg-yellow">
                            <span class="info-box-icon"><i class="ion ion-ios-pricetag-outline"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Balance</span>
                                <span id="clientbalance" class="info-box-number"></span>
                                <span class="progress-description">
                                    Balance Including Open Orders: <span class="info-box-number" id="finalbalance"></span>
                                </span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div id="statusbox" class="info-box bg-green">
                            <span class="info-box-icon"><i class="ion ion-ios-heart-outline"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Limit</span>
                                <span id="clientlimit" class="info-box-number"></span>


                                <span id="verified" class="progress-description">

                                </span>
                                <span id="overlimit" class="info-box-number"></span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-xs-12">
                        <div class="info-box bg-aqua">
                            <span class="info-box-icon"><i class="ion-ios-chatbubble-outline"></i></span>

                            <div class="info-box-content">
                                <span class="info-box-text">Open Order Balance</span>
                                <span id="openordertotal" class="info-box-number"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
