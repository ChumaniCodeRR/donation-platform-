@section Menu {
    @Scripts.Render("~/Scripts/Home/DashboardV1/menu-r")
}

@section Scripts {
    <script src=@Url.Content("https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js") type="text/javascript"></script>
    <script src=@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/free-jqgrid/4.13.5/js/jquery.jqgrid.min.js") type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $("#Mytable").jqGrid({
                url: '/Home/GetData/',
                datatype: "json",
                colNames: ['First name', 'Last name', 'Amount Donated'],
                colModel: [
                    { name: 'Firstname', index: 'Firstname', width: 300 },
                    { name: 'Lastname', index: 'Lastname', width: 300 },
                    { name: 'Amount', index: 'Amount', width: 300 },
                    //{ name: 'body', index: 'body', width: 350, sortable: false }
                ],
                rowNum: 10,
                loadonce: true,
                rowList: [10, 20, 30],
                pager: '#pager2',
                sortname: 'id',
                viewrecords: true,
                sortorder: "acs",
                caption: ""
            });
            $("#Mytable").jqGrid('navGrid', '#pager2', { edit: true, add: false, del: false });
        });
    </script>

    @Scripts.Render("~/AdminLTE/plugins/bootstrap-wysihtml5/js-r")
    @Scripts.Render("~/AdminLTE/plugins/sparkline/js-r")
    @Scripts.Render("~/AdminLTE/plugins/jvectormap/js-r")
    @Scripts.Render("~/AdminLTE/plugins/daterangepicker/js-r")
    @Scripts.Render("~/AdminLTE/plugins/knob/js-r")
    @Scripts.Render("~/AdminLTE/plugins/raphael/js-r")
    @Scripts.Render("~/AdminLTE/plugins/morris/js-r")
    @Scripts.Render("~/AdminLTE/plugins/datepicker/js-r")
    @Scripts.Render("~/Scripts/Home/DashboardV1-r")
}

